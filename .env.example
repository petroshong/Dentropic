# MCP server identity
MCP_SERVER_NAME=dentropic
MCP_SERVER_TITLE=Dental MCP
MCP_SERVER_DESCRIPTION=Dental operations MCP server with Cloudflare and dental imagery processing
MCP_URL=http://localhost:3000
MCP_WEBSITE_URL=https://manufact.com/docs/home

# Storage backend: memory | cloudflare
DATA_BACKEND=memory

# Cloudflare D1 API credentials (required when DATA_BACKEND=cloudflare)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_D1_DATABASE_ID=
CLOUDFLARE_API_TOKEN=

# Optional: model-based dental image analysis
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1
DENTAL_IMAGE_MODEL=gpt-4.1-mini

# PHI controls
# If set, communication/task note fields are encrypted before storage.
PHI_ENCRYPTION_KEY=
# Require actor.purpose for sensitive read operations
REQUIRE_PURPOSE_ON_SENSITIVE_READS=true
